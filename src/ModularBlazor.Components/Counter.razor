@using Microsoft.AspNetCore.Components;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount;

    protected override async Task OnInitializedAsync()
    {

        currentCount = 0;
    }


    void IncrementCount()
    {
        currentCount++;
    }
}
